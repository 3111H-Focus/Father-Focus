<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:gravity="center" 
  android:orientation="vertical" 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_gravity="center"
  android:background="#b0000000" >
  <LinearLayout 
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:layout_gravity="center"
    android:background="@drawable/downbutton_corner"
    android:padding="10dip">
    <LinearLayout 
      android:gravity="center"
      android:orientation="horizontal"
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content" 
      android:layout_gravity="center"
      android:layout_weight="1">
      <ImageView
        android:layout_width="90dip"
        android:layout_height="62dip"
        android:src="@drawable/chick_gary"
        android:scaleType="centerInside"/>
      <TextView
        android:text="@string/locker_pop_title"
        android:textSize="12pt"
        android:textColor="#FFFFFFCE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
      android:id="@+id/locker_pop_description_text"
      android:text="@string/locker_pop_description"
      android:textSize="7pt"
      android:textColor="#FFFFFFFF"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"/>
    <TextView
      android:text="@string/locker_pop_retype"
      android:textSize="7pt"
      android:textColor="#FFFFFFFF"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"/>
    <TextView
      android:id="@+id/locker_pop_unlock_sequence"
      android:text="@string/locker_pop_sequence"
      android:textSize="7pt"
      android:textColor="#FF600000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/locker_pop_relock_time"
      android:text="@string/locker_pop_relock"
      android:textSize="7pt"
      android:textColor="#FFFFFFFF"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="left"/>
    <EditText 
      android:id="@+id/locker_pop_input"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:textSize="7pt"
      android:layout_gravity="left"
      android:textColor="#FFFFFFFF"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="horizontal" >>
        <Button
            android:id="@+id/locker_pop_lazy_button"
            android:layout_width="144dip"
            android:layout_height="60dip"
            android:text="@string/locker_pop_lazy"
            android:textSize="8pt" />
        <Button
            android:id="@+id/locker_pop_gary_lee_button"
            android:layout_width="144dip"
            android:layout_height="60dip"
            android:text="@string/locker_pop_gary_lee"
            android:textSize="8pt" />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>